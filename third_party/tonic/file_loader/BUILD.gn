source_set("file_loader") {
  visibility = [ "../*" ]

  configs += [ "../:config" ]

  sources = [
    "file_loader.cc",
    "file_loader.h",
  ]

  if (is_win) {
    sources += [ "file_loader_win.cc" ]
  } else if (is_fuchsia) {
    sources += [ "file_loader_fuchsia.cc" ]
  } else {
    sources += [ "file_loader_posix.cc" ]
  }

  deps = [
    "../common",
    "../converter",
    "../filesystem",
    "../parsers",
    "//third_party/dart/runtime:dart_api",
  ]
}
